<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/styles.css">
    <script defer src="https://cdn.socket.io/3.1.3/socket.io.min.js"
        integrity="sha384-cPwlPLvBTa3sKAgddT6krw0cJat7egBga3DJepJyrLl4Q9/5WLra3rrnMcyTyOnh"
        crossorigin="anonymous"></script>
    <title>ChatBox</title>
</head>

<body>
    <div class="container-main">
        <div class="sidebar">
            <div class="sidebarUpper" id="sidebarUpper">
                <img src="./images/user-2.png" alt="userpic">
                <h1>User Name</h1>
            </div>
            <div class="sidebarLower selectedUser" id="sidebarLower">
            </div>
        </div>
        <div class="container">
            <header>
                <img src="./images/user.png" alt="" class="user-img">
            </header>
            <div class="message-container">
            </div>
            <form action="#" class="form">
                <input type="text" placeholder="Message" class="messageInp" autofocus>
                <button type="submit" class="sendBtn"><img src="./images/send.png" alt="" class="send-img"></button>
            </form>
        </div>
    </div>
    <script>
        let userName = "<%- name %>";
        let messagesFromDbs = <%- messages %>;
        console.log(messagesFromDbs);
    </script>
    <script defer src="./js/client.js"></script>
</body>

</html>